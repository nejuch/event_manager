  
  
  
  <div class="clearfix">
    <ul rn-carousel rn-carousel-transition="hexagon">
      <!-- Add a new Event -->
      <li>
        <div class="container">
          <div class="jumbotron">
            <h1>Create new event</h1>
            <p>
              Get started managing your event bookings with myStudio.<br>
              Just push the button!
            </p>
            <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#eventCreatorModal">Create new Event</button>
          </div>
        </div>
      </li>
      <li ng-repeat="event in carousel.events">
        <div class="container">
          <div class="jumbotron">
            <h1>
              {{event.event_name}}
              <small class="pull-right">{{event.timestamp}}</small>
            </h1>
            <p>
              {{event.event_description}}
            </p>
            <div class="row">
              <div class="col-xs-4">
                <button type="button" class="btn btn-primary btn-lg col-xs-12">
                  <h3>Tracklist:</h3>
                  <p>
                    {{event.tracks.length}}<br>
                    tracks listed
                  </p>
                </button>
              </div>
              <div class="col-xs-4">
                <button type="button" class="btn btn-primary btn-lg col-xs-12">
                  <h3>Equipment:</h3>
                  <p>
                    {{event.equipments.length}}<br>
                    parts packed
                  </p>
                </button>
              </div>
              <div class="col-xs-4">
                <button type="button" class="btn btn-primary btn-lg col-xs-12">
                  <h3>Location:</h3>
                  <address>
                    {{event.location.street}}<br>
                    {{event.location.zip}}, {{event.location.city}}
                  </address>
                </button>
              </div>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
